{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "title": "Test Duration Table View",
  "padding": 5,
  "data": [
    {
      "name": "test_stats",
      "url": {
        "%context%": true,
        "%timefield%": "results.summary.stop",
        "index": "ad-serving-automation-*",
        "body": {
          "size": 0,
          "aggs": {
            "tests_nested": {
              "nested": { "path": "results.tests" },
              "aggs": {
                "by_test_name": {
                  "terms": {
                    "field": "results.tests.name",
                    "size": 200
                  },
                  "aggs": {
                    "test_count": {
                      "value_count": { "field": "results.tests.name" }
                    },
                    "avg_duration": {
                      "avg": { "field": "results.tests.duration" }
                    },
                    "min_duration": {
                      "min": { "field": "results.tests.duration" }
                    },
                    "max_duration": {
                      "max": { "field": "results.tests.duration" }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "format": {
        "property": "aggregations.tests_nested.by_test_name.buckets"
      },
      "transform": [
        {
          "type": "formula",
          "as": "runs_count",
          "expr": "datum.test_count && datum.test_count.value != null ? datum.test_count.value : null"
        },
        {
          "type": "formula",
          "as": "avg",
          "expr": "datum.avg_duration && datum.avg_duration.value != null ? datum.avg_duration.value : null"
        },
        {
          "type": "formula",
          "as": "min",
          "expr": "datum.min_duration && datum.min_duration.value != null ? datum.min_duration.value : null"
        },
        {
          "type": "formula",
          "as": "max",
          "expr": "datum.max_duration && datum.max_duration.value != null ? datum.max_duration.value : null"
        },
        {
          "type": "formula",
          "as": "avg_formatted",
          "expr": "datum.avg != null ? floor(datum.avg / 60000) + 'm ' + (round((datum.avg % 60000) / 1000)) + 's (' + format(datum.avg, '.0f') + 'ms)' : null"
        },
        {
          "type": "formula",
          "as": "min_formatted",
          "expr": "datum.min != null ? floor(datum.min / 60000) + 'm ' + (round((datum.min % 60000) / 1000)) + 's (' + format(datum.min, '.0f') + 'ms)' : null"
        },
        {
          "type": "formula",
          "as": "max_formatted",
          "expr": "datum.max != null ? floor(datum.max / 60000) + 'm ' + (round((datum.max % 60000) / 1000)) + 's (' + format(datum.max, '.0f') + 'ms)' : null"
        },
        {
          "type": "window",
          "ops": ["row_number"],
          "as": ["row_number"]
        }
      ]
    }
  ],
  "marks": [
    {
      "type": "text",
      "encode": {
        "enter": {
          "x": { "value": 0 },
          "y": { "value": 0 },
          "text": { "value": "Test Name" },
          "fontWeight": { "value": "bold" },
          "fontSize": { "value": 16 },
          "baseline": { "value": "top" }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "x": { "value": 500 },
          "y": { "value": 0 },
          "text": { "value": "Avg Duration" },
          "fontWeight": { "value": "bold" },
          "fontSize": { "value": 16 },
          "baseline": { "value": "top" },
          "align": { "value": "left" }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "x": { "value": 680 },
          "y": { "value": 0 },
          "text": { "value": "Min Duration" },
          "fontWeight": { "value": "bold" },
          "fontSize": { "value": 16 },
          "baseline": { "value": "top" },
          "align": { "value": "left" }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "x": { "value": 860 },
          "y": { "value": 0 },
          "text": { "value": "Max Duration" },
          "fontWeight": { "value": "bold" },
          "fontSize": { "value": 16 },
          "baseline": { "value": "top" },
          "align": { "value": "left" }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "x": { "value": 1040 },
          "y": { "value": 0 },
          "text": { "value": "Runs Count" },
          "fontWeight": { "value": "bold" },
          "fontSize": { "value": 16 },
          "baseline": { "value": "top" },
          "align": { "value": "left" }
        }
      }
    },
    {
      "type": "rule",
      "encode": {
        "enter": {
          "x": { "value": 480 },
          "y": { "value": 0 },
          "y2": { "signal": "height" },
          "strokeWidth": { "value": 1 },
          "stroke": { "value": "#ccc" }
        }
      }
    },
    {
      "type": "rule",
      "encode": {
        "enter": {
          "x": { "value": 670 },
          "y": { "value": 0 },
          "y2": { "signal": "height" },
          "strokeWidth": { "value": 1 },
          "stroke": { "value": "#ccc" }
        }
      }
    },
    {
      "type": "rule",
      "encode": {
        "enter": {
          "x": { "value": 850 },
          "y": { "value": 0 },
          "y2": { "signal": "height" },
          "strokeWidth": { "value": 1 },
          "stroke": { "value": "#ccc" }
        }
      }
    },
    {
      "type": "rule",
      "encode": {
        "enter": {
          "x": { "value": 1030 },
          "y": { "value": 0 },
          "y2": { "signal": "height" },
          "strokeWidth": { "value": 1 },
          "stroke": { "value": "#ccc" }
        }
      }
    },
    {
      "type": "text",
      "from": { "data": "test_stats" },
      "encode": {
        "enter": {
          "x": { "value": 0 },
          "y": { "signal": "20 + datum.row_number * 20" },
          "text": { "field": "key" },
          "fontSize": { "value": 14 },
          "baseline": { "value": "top" }
        }
      }
    },
    {
      "type": "text",
      "from": { "data": "test_stats" },
      "encode": {
        "enter": {
          "x": { "value": 500 },
          "y": { "signal": "20 + datum.row_number * 20" },
          "text": { "field": "avg_formatted" },
          "fontSize": { "value": 14 },
          "baseline": { "value": "top" },
          "align": { "value": "left" }
        }
      }
    },
    {
      "type": "text",
      "from": { "data": "test_stats" },
      "encode": {
        "enter": {
          "x": { "value": 680 },
          "y": { "signal": "20 + datum.row_number * 20" },
          "text": { "field": "min_formatted" },
          "fontSize": { "value": 14 },
          "baseline": { "value": "top" },
          "align": { "value": "left" }
        }
      }
    },
    {
      "type": "text",
      "from": { "data": "test_stats" },
      "encode": {
        "enter": {
          "x": { "value": 860 },
          "y": { "signal": "20 + datum.row_number * 20" },
          "text": { "field": "max_formatted" },
          "fontSize": { "value": 14 },
          "baseline": { "value": "top" },
          "align": { "value": "left" }
        }
      }
    },
    {
      "type": "text",
      "from": { "data": "test_stats" },
      "encode": {
        "enter": {
          "x": { "value": 1040 },
          "y": { "signal": "20 + datum.row_number * 20" },
          "text": { "signal": "format(datum.runs_count, '.0f')" },
          "fontSize": { "value": 14 },
          "baseline": { "value": "top" },
          "align": { "value": "left" }
        }
      }
    }
  ]
}